<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hycan.idn.tsp.message.repository.mysql.TaskVinRelationMapper">

    <resultMap id="BaseResultMap" type="com.hycan.idn.tsp.message.entity.mysql.TaskVinRelationEntity">
        <result property="id" jdbcType="BIGINT" column="id"/>
        <result property="baseTaskId" jdbcType="BIGINT" column="base_task_id"/>
        <result property="vin" jdbcType="VARCHAR" column="vin"/>
    </resultMap>

    <select id="exportVinsByBaseTaskId" resultType="com.hycan.idn.tsp.message.pojo.basetask.ExportVinRspVO">
        SELECT vin FROM task_vin_relation WHERE base_task_id = #{base_task_id}
    </select>

    <select id="findVinsByBaseTaskId" resultType="java.lang.String">
        SELECT vin FROM task_vin_relation WHERE base_task_id = #{base_task_id}
    </select>

    <insert id="batchInsertOrUpdate">
        INSERT INTO task_vin_relation (id, base_task_id, vin)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id}, #{item.baseTaskId}, #{item.vin})
        </foreach>
        ON CONFLICT (base_task_id, vin) DO NOTHING;
    </insert>

    <delete id="deleteByBaseTaskId">
        DELETE FROM task_vin_relation WHERE base_task_id = #{base_task_id}
    </delete>
</mapper>